#!/bin/bash

cur_ws="`wmctrl -d | grep '*'`"
cur_ws=${cur_ws: -1}

Y='\033[0;33m'
N='\033[0m'

show_help(){
	echo -e "${Y}usage>${N} workspace --switch next/previous"
}

inv_par(){
	echo -e "${Y}ERR>${N} invalid args"
}

case "$#" in
	"0")
		show_help
		;;

	"1")
		case "$1" in
			"-h"|"--help")
				show_help
				;;

			"-gn"|"--go-next")
				bspc node -d $(($cur_ws+1))
				;;

			"-gp"|"--go-previous")
				bspc node -d $(($cur_ws-1))
				;;

			"-s"|"--show")
				echo -e "${Y}INFO>${N} currently on workspace $cur_ws"
				;;
			*)
				inv_par
				;;
		esac
		;;

	"2")
		case "$1" in
			"-s"|"--switch")
				case "$2" in
					"n"|"next")
						wmctrl -s $((cur_ws-2))
						;;

					"p"|"previous")
						wmctrl -s $((cur_ws))
						;;

					*)
						inv_par
						;;
				esac
		esac
		;;

	*)
		inv_par
		;;
esac
